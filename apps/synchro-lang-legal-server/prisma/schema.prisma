datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Report {
  caseField     CaseModel? @relation(fields: [caseFieldId], references: [id])
  caseFieldId   String?
  content       String?
  contentField  String?
  createdAt     DateTime   @default(now())
  id            String     @id @default(cuid())
  relatedCase   String?
  reportContent String?
  reportTitle   String?
  title         String?
  titleField    String?
  updatedAt     DateTime   @updatedAt
}

model CaseModel {
  createdAt     DateTime             @default(now())
  deadline      DateTime?
  description   String?
  documents     Document[]
  id            String               @id @default(cuid())
  messages      Message[]
  reports       Report[]
  researchItems Research[]
  status        EnumCaseModelStatus?
  title         String?
  updatedAt     DateTime             @updatedAt
  user          User?                @relation(fields: [userId], references: [id])
  userId        String?
}

model Document {
  caseField   CaseModel? @relation(fields: [caseFieldId], references: [id])
  caseFieldId String?
  createdAt   DateTime   @default(now())
  fileUrl     String?
  id          String     @id @default(cuid())
  name        String?
  updatedAt   DateTime   @updatedAt
  version     String?
}

model Research {
  caseField   CaseModel? @relation(fields: [caseFieldId], references: [id])
  caseFieldId String?
  content     String?
  createdAt   DateTime   @default(now())
  id          String     @id @default(cuid())
  savedAt     DateTime?
  title       String?
  updatedAt   DateTime   @updatedAt
}

model Message {
  caseField   CaseModel? @relation(fields: [caseFieldId], references: [id])
  caseFieldId String?
  content     String?
  createdAt   DateTime   @default(now())
  id          String     @id @default(cuid())
  sentAt      DateTime?
  updatedAt   DateTime   @updatedAt
  user        User?      @relation(fields: [userId], references: [id])
  userId      String?
}

model User {
  cases     CaseModel[]
  createdAt DateTime      @default(now())
  email     String?       @unique
  firstName String?
  id        String        @id @default(cuid())
  lastName  String?
  messages  Message[]
  name      String?
  password  String
  role      EnumUserRole?
  roles     Json
  updatedAt DateTime      @updatedAt
  username  String        @unique
}

enum EnumCaseModelStatus {
  Option1
}

enum EnumUserRole {
  Option1
}
